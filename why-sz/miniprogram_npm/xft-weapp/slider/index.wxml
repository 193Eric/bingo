<view bind:tap="onClick" class="custom-class {{utils.bem( 'slider',{disabled:disabled} )}}" style="{{style( { background:inactiveColor,height:utils.addUnit(barHeight) } )}}">
    <view class="{{utils.bem('slider__bar')}}" style="{{barStyle}}; {{style( {backgroundColor:activeColor} )}}">
        <view bind:touchcancel="onTouchEnd" bind:touchend="onTouchEnd" bind:touchstart="onTouchStart" catch:touchmove="onTouchMove" class="{{utils.bem('slider__button-wrapper')}}">
            <slot name="button" wx:if="{{useButtonSlot}}"></slot>
            <view class="{{utils.bem('slider__button')}}" wx:else></view>
        </view>
    </view>
</view>
<wxs module="utils" src="../wxs/utils.wxs" />
<wxs module="style" src="../wxs/style.wxs" />