.index-banner {
    height: 700rpx;
    width: 750rpx;
}

.index-banner image {
    width: 100%;
    height: 100%;
}

.index-content {
    padding: 56rpx 0rpx;
    border-radius: 20rpx;
    background: #fff;
    overflow: hidden;
    position: relative;
    top: -80rpx;
    height: 820rpx;
    background: url("https://file.91xft.cn:9002/static/whyStatic/index-card-bg.png") no-repeat;
    background-size: 100%;
}

.index-content__title {
    font-size: 32rpx;
    font-family: PingFang SC;
    font-weight: 500;
    line-height: 50rpx;
    height: 50rpx;
    display: flex;
    color: #0237ff;
    align-items: center;
    margin-top: 50rpx;
    padding: 0 30rpx;
}

.index-content__title image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
}

.index-content__step {
    border: 1rpx solid #0237ff;
    width: 686rpx;
    margin: 45rpx auto 0;
}

.content {
    margin-top: 50rpx;
}

.content-item {
    width: 383rpx;
    height: 474rpx;
    background: #fff;
    border-radius: 20rpx;
    position: relative;
    background: url("https://file.91xft.cn:9002/static/whyStatic/why-queue-bg.png") no-repeat;
    background-size: 100%;
}

.content-item__logo {
    height: 208rpx;
    text-align: center;
    overflow: hidden;
    clip-path: polygon(10% 2%,46.8% 2%,53.8% 11%,93% 11.5%,100% 23%,100% 99%,0 99%,-.1% 16%);
    padding: 2rpx;
    box-sizing: border-box;
}

.content-item__logo image {
    width: 100%;
    height: 100%;
}

.content-item__append {
    background: linear-gradient(180deg,rgba(2,55,255,0),#0237ff);
    opacity: .6;
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 300;
    height: 56rpx;
    line-height: 56rpx;
    text-indent: 24rpx;
    color: #fff;
    position: absolute;
    width: 100%;
    top: 161rpx;
}

.content-item__body {
    padding: 0rpx 25rpx;
}

.body-title {
    font-size: 30rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #0237ff;
    margin-top: 32rpx;
}

.body-address {
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 300;
    color: #666;
    margin-top: 23rpx;
    margin-bottom: 48rpx;
    line-height: 1;
}

button::after {
    border: none;
}

.content-item button {
    margin: 0;
    padding: 0;
    background: inherit;
    background-color: inherit;
    border-radius: inherit;
    font-size: inherit;
    text-align: inherit;
    line-height: inherit;
    background: transparent;
    border: none;
}

.body-time {
    font-weight: 300;
    color: #666;
}

.body-now,.body-time {
    font-size: 20rpx;
    font-family: PingFang SC;
    line-height: 1;
}

.body-now {
    font-weight: 400;
    color: #ff0082;
    padding-top: 18rpx;
}

.body-now image {
    width: 24rpx;
    height: 24rpx;
    position: relative;
    top: 4rpx;
}

.body-site {
    font-size: 22rpx;
    font-family: PingFang SC;
    font-weight: 300;
    color: #999;
    float: right;
    margin-top: 6rpx;
}

.body-site image {
    width: 25rpx;
    height: 24rpx;
    position: relative;
    top: 5rpx;
}

.content-field {
    width: 691rpx;
    height: 86rpx;
    margin-top: 80rpx;
    line-height: 84rpx;
    position: relative;
}

.content-field:nth-child(1) {
    background: url("https://file.91xft.cn:9002/static/whyStatic/input-1.png") no-repeat;
    background-size: 100%;
}

.content-field:nth-child(2) {
    background: url("https://file.91xft.cn:9002/static/whyStatic/input-2.png") no-repeat;
    background-size: 100%;
    margin-top: 16rpx;
}

.index-content__form {
    width: 686rpx;
    margin: 5rpx auto 0;
}

.content-field span {
    line-height: 91rpx;
    height: 91rpx;
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #999;
    text-indent: 20rpx;
    float: left;
}

.content-field span image {
    width: 32rpx;
    height: 32rpx;
    position: relative;
    top: 6rpx;
    margin-right: 2rpx;
}

.content-field .input {
    display: inline-block;
    width: 460rpx;
    font-size: 28rpx;
    font-weight: 400;
    height: 91rpx;
    text-align: right;
    line-height: 91rpx;
    color: #0237ff;
}

.phcolor {
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #999;
}

.content-confirm {
    margin-top: 28rpx;
}

.content-confirm image {
    width: 77rpx;
    height: 77rpx;
    margin-top: 20rpx;
    float: right;
    margin-right: 0rpx;
}

.content-confirm>view {
    width: 277rpx;
    height: 117rpx;
    float: right;
    background: url("https://file.91xft.cn:9002/static/whyStatic/button.png") no-repeat;
    background-size: 100%;
    font-size: 30rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #666;
    line-height: 117rpx;
    text-align: center;
    position: relative;
    right: -23rpx;
}

.content-confirm .can-confirm {
    background: url("https://file.91xft.cn:9002/static/whyStatic/button2.png") no-repeat;
    background-size: 100%;
    position: relative;
    right: -23rpx;
    color: #fff;
}

.slider-item {
    width: 331rpx;
    height: 170rpx;
    position: relative;
    padding: 24rpx;
    box-sizing: border-box;
    text-align: center;
}

.index-content__slider {
    position: relative;
    width: 686rpx;
    margin: 16rpx auto 0;
}

.index-content__slider .tips {
    position: absolute;
    font-size: 20rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #0237ff;
    bottom: -35rpx;
}

.index-content__slider .tips image {
    width: 21rpx;
    height: 21rpx;
    position: relative;
    top: 3rpx;
    margin-right: 9rpx;
}

.slider-item image {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: -1;
}

.slider-item .img-icon {
    position: absolute;
    width: 16rpx;
    height: 12rpx;
    top: 16rpx;
    right: 20rpx;
    left: auto;
}

.slider-item__info-select {
    color: #ff0082!important;
}

.slider-item__title {
    font-size: 34rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #0237ff;
    margin-top: 10rpx;
    margin-bottom: 14rpx;
}

.slider-item__info {
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #999;
}

.van-slider--disabled {
    opacity: 1;
}

.van-slider {
    height: 16rpx!important;
    border-radius: 0!important;
    padding: 0 1rpx;
    overflow: hidden;
}

.van-slider__bar {
    height: 12rpx!important;
    margin-top: 2rpx;
}

.index-content__step__tips {
    margin: 0 auto 39rpx;
    width: 686rpx;
    text-align: right;
}

.index-content__step__tips image {
    height: 20rpx;
    width: 80rpx;
}

.queue-none {
    text-align: center;
    overflow: hidden;
}

.queue-none image {
    width: 510rpx;
    height: 426rpx;
    margin: 0rpx auto 0;
}

.queue-none>view {
    font-size: 24rpx;
    font-family: PingFangSC-Regular,PingFang SC;
    font-weight: 400;
    color: #999;
    line-height: 33rpx;
    margin-top: 28rpx;
}