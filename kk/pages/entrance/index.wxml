<block wx:if="{{$taroCompReady}}">
    <view class="{{_$anonymousState__temp}}" wx:if="{{status=='error'}}">
        <page-status compid="{{$compid__73}}"></page-status>
    </view>
    <view class="loading-container" wx:elif="{{status=='loading'}}">
        <view>
            <image src="https://qn-cdn-pic.feng1.com/theme_pic-20200814-81f40019199efe692ef1c52ec9117afc?imageslim"></image>
        </view>
        <view>努力加载中...</view>
    </view>
    <view class="{{'home_container '+(isIphoneX?'page-iphonex':'')}}" wx:elif="{{!shelfCode}}">
        <view bindtap="shelfScanCode" class="scan-code-btn" data-e-tap-so="this">
            <image class="img" src="{{scanCodeBtn}}"></image>
            <view class="text">扫码购买</view>
        </view>
        <custom-tab-bar compid="{{$compid__74}}"></custom-tab-bar>
        <view class="iphone-x-fix-white-padding"></view>
    </view>
    <view wx:elif="{{userAccountList.length>1}}">
        <account-login compid="{{$compid__75}}"></account-login>
    </view>
    <view class="cancel-container" wx:elif="{{isCancelAuth}}">
        <view class="cancel-content">
            <view>
                <image class="auth-img" src="{{authImage}}"></image>
            </view>
            <view class="">授权失败，需要获取您的授权才能访问能量站哦~</view>
            <view class="">请重新授权</view>
        </view>
        <view class="auth-bottom">
            <button bindtap="onGetUserProfile" class="auth_button" data-e-tap-so="this" wx:if="{{canIUseGetUserProfile}}">我要授权</button>
            <button bindgetuserinfo="onInnerGetUserInfo" class="auth_button" data-e-getuserinfo-so="this" openType="getUserInfo" wx:if="{{!canIUseGetUserProfile}}">我要授权</button>
        </view>
    </view>
    <view wx:elif="{{authUserInfo===false}}">
        <modal compid="{{$compid__76}}">
            <view class="auth-user-modal-content">
                <view class="modal_title">温馨提示</view>
                <view class="show_title">需要获取您的授权才能访问能量站哦</view>
                <button bindtap="onGetUserProfile" class="auth_button" data-e-tap-so="this" wx:if="{{canIUseGetUserProfile}}">我要授权</button>
                <button bindgetuserinfo="onInnerGetUserInfo" class="auth_button" data-e-getuserinfo-so="this" openType="getUserInfo" wx:if="{{!canIUseGetUserProfile}}">我要授权</button>
            </view>
        </modal>
    </view>
    <view class="loading-container" wx:else>
        <view>
            <image src="https://qn-cdn-pic.feng1.com/theme_pic-20200814-81f40019199efe692ef1c52ec9117afc?imageslim"></image>
        </view>
        <view>努力加载中...</view>
    </view>
</block>
