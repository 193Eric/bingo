.outsidePading,.product-info {
    padding: 0 30rpx;
}

.coupon,.flex,.flex-around,.flex-between {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.flex,.flex-around {
    justify-content: space-around;
}

.flex {
    justify-content: flex-start;
    -webkit-align-items: center;
}

.product-info {
    border-radius: 16rpx;
}

.product-info .product-info-header {
    height: 80rpx;
    line-height: 80rpx;
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    font-weight: 400;
    color: #4d4d4d;
    background: #fff;
    position: relative;
}

.product-info .product-info-header .header_title {
    float: left;
}

.product-info .product-info-header .header_right {
    float: right;
    white-space: nowrap;
    font-size: 22rpx;
}

.product-info,.product-info .product-list {
    background-color: #fff;
}

.product-info .item.hide {
    display: none;
}

.product-info .item:last-child {
    border: 0;
}

.product-info .item.border-none {
    border: 0;
}

.coupon {
    height: 100rpx;
    border-top: 2rpx solid #f3f5f7;
    background-color: #fff;
}

.coupon .h4,.coupon .keywords {
    font-family: PingFangSC-Regular;
    color: #4d4d4d;
}

.coupon .h4 {
    font-size: 30rpx;
    font-weight: 400;
}

.coupon .keywords {
    font-size: 26rpx;
    display: flex;
    align-items: center;
}

.coupon .keywords .red {
    color: #ff2b00!important;
    margin-right: 20rpx;
}

.coupon .keywords .no-choosed-coupon {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #c5c6c7;
    display: inline-block;
}

.coupon .coupon-tips {
    display: inline-block;
    width: 28rpx;
    height: 28rpx;
    margin-right: 12rpx;
    background: url(data:image/png;base64,) no-repeat center center;
    background-size: 100% 100%!important;
}

.show-hide-product {
    height: 60rpx;
    text-align: center;
    border: 0;
    width: 100%;
    background-color: #fff;
    font-size: 26rpx;
    color: #4d4d4d;
    margin-bottom: 20rpx;
}

.show-hide-product:after {
    content: '';
    display: inline-block;
    width: 28rpx;
    height: 18rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 100% 100%;
    margin-left: 12rpx;
    vertical-align: middle;
    position: relative;
    top: -2rpx;
    transition: all linear .3s;
    transform: rotate(-180deg);
    transform-origin: center;
    border: 0;
}

.show-hide-product.active:after {
    transform: rotate(0deg);
}

.product-list-confirm .product-item {
    width: 100%;
    display: flex;
    align-items: center;
    padding: 12rpx 0;
    border-bottom: 2rpx dashed #f3f5f7;
}

.product-list-confirm .product-item:last-child {
    border-bottom: none;
}

.product-list-confirm .product-item .img {
    width: 120rpx;
    height: 120rpx;
    margin-right: 46rpx;
    position: relative;
}

.product-list-confirm .product-item .img .image-content {
    width: 100%;
    height: 100%;
}

.product-list-confirm .product-item .product-meta {
    width: 0;
    flex: 1;
}

.product-list-confirm .product-item .product-meta .product-name {
    font-size: 28rpx;
    color: #4d4d4d;
    margin-bottom: 8rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.product-list-confirm .product-item .product-meta .product-number {
    opacity: .4;
    font-size: 26rpx;
    color: #4d4d4d;
}

.product-list-confirm .product-item .product-price {
    font-size: 30rpx;
    color: #4d4d4d;
}