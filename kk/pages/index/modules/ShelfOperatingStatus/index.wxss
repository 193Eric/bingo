.shelf-operating-status-wrapper,shelf-operating-status {
    background-image: linear-gradient(-122deg,#fddc65 0,#fbcd4e 99%);
    width: 100%;
    height: 136rpx;
    position: fixed;
    z-index: 1;
    top: 0;
}

.shelf-operating-status-wrapper__close .shelf-operating-status,shelf-operating-status__close .shelf-operating-status {
    transform: translateX(-30rpx);
}

.shelf-operating-status-wrapper__rest .shelf-operating-status,shelf-operating-status__rest .shelf-operating-status {
    transform: translateX(-44rpx);
}

.shelf-operating-status {
    width: 100%;
    height: 80rpx;
    box-sizing: border-box;
    color: #412a16;
    display: flex;
    align-items: center;
    justify-content: center;
}

.shelf-operating-status__icon {
    width: 120rpx;
    height: 80rpx;
    margin-right: 12rpx;
}

.shelf-operating-status__text {
    font-size: 28rpx;
    letter-spacing: 0;
    line-height: 28rpx;
    margin-right: 8rpx;
    font-family: PingFang-SC-Medium;
}

.shelf-operating-status__time {
    height: 40rpx;
    display: inline-block;
    border: 2rpx solid #333;
    border-radius: 20rpx;
    padding-left: calc(146rpx + 10rpx);
    padding-right: 10rpx;
    box-sizing: border-box;
    position: relative;
    display: flex;
    align-items: center;
}

.shelf-operating-status__time .shelf-operating-countdown__label {
    font-family: PingFang-SC-Medium;
    font-size: 24rpx;
    color: #fbcd4e;
    background-color: #333;
    display: inline-block;
    width: 146rpx;
    text-align: center;
    height: 40rpx;
    line-height: 40rpx;
    border-radius: 20rpx;
    position: absolute;
    left: -2rpx;
    top: -2rpx;
    box-sizing: border-box;
}

.shelf-operating-status__time .shelf-operating-countdown__content {
    font-family: PingFangSC-Medium;
    font-size: 24rpx;
    color: #412a16;
    white-space: nowrap;
    display: inline-block;
    margin-top: -.2em;
}

.shelf-operating-status__time .shelf-operating-countdown__content .text,.shelf-operating-status__time .shelf-operating-countdown__content text {
    display: inline-block;
    font-family: PingFangSC-Medium;
    font-size: 24rpx;
    color: #412a16;
    line-height: 40rpx;
    margin: 0 4rpx;
}

.shelf-operating-status__time .shelf-operating-countdown__content .day {
    margin-right: 8rpx;
}