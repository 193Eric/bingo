.cart-exchange-product-list {
    padding: 0 24rpx;
    overflow-x: scroll;
    margin-top: 24rpx;
    margin-bottom: 30rpx;
    display: flex;
}

.cart-exchange-product-list .paddingRight {
    display: flex;
    width: 24rpx;
    flex: 0 0 24rpx;
}

.cart-exchange-product {
    padding: 18rpx;
    background: #fff;
    border: 2rpx solid #f6f6f6;
    border-radius: 12rpx;
    width: 452rpx;
    height: 144rpx;
    display: flex;
    align-items: center;
    flex-wrap: nowrap;
    flex: 0 0 452rpx;
    position: relative;
    white-space: nowrap;
}

.cart-exchange-product+.cart-exchange-product {
    margin-left: 24rpx;
}

.cart-exchange-product .img {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
}

.cart-exchange-product .meta {
    flex: 1;
    width: 0;
    margin-left: 20rpx;
}

.cart-exchange-product .product-name {
    font-size: 28rpx;
    color: #4d4d4d;
    margin-bottom: 16rpx;
    line-height: 28rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.cart-exchange-product .exchange-price {
    font-size: 30rpx;
    color: #ff7400;
    line-height: 1;
    margin-bottom: 8rpx;
}

.cart-exchange-product .sale-price {
    font-size: 24rpx;
    color: #c5c6c7;
    line-height: 1;
    text-decoration: line-through;
}

.cart-exchange-product .cart-icon {
    width: 40rpx;
    height: 40rpx;
    background-image: url(data:image/png;base64,);
    background-size: 26rpx 24rpx;
    background-position: center;
    background-color: #fabe39;
    border-radius: 50%;
    background-repeat: no-repeat;
    position: absolute;
    bottom: 18rpx;
    right: 32rpx;
}