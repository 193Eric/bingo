.bottom-tab {
    position: fixed;
    display: flex;
    width: 100%;
    height: 98rpx;
    background: #fff;
    box-shadow: 0 -10rpx 20rpx 0 rgba(0,0,0,.03);
    bottom: 0;
}

.bottom-tab.is-iphonex {
    bottom: 64rpx;
}

.bottom-tab-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.bottom-tab-item-img {
    margin: 14rpx auto 8rpx;
    width: 40rpx;
    height: 40rpx;
}

.bottom-tab-item-text {
    height: 28rpx;
    line-height: 28rpx;
    font-size: 20rpx;
    font-family: PingFangSC-Light,PingFang SC;
    font-weight: 300;
    color: #444;
}