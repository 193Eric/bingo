<view wx:if="{{$taroCompReady}}">
    <view class="phone_tips_info">请输入<text id="c_mobilePhone">{{mobilePhone}}</text>收到的验证码</view>
    <view class="input_box clearfix">
        <input bindinput="getCode" class="v_code_inout" maxlength="{{6}}" type="number" value="{{code}}"></input>
        <button bindtap="getPhoneCode" class="{{'get_code_button '+(codeTxt?'disabled':'')}}" disabled="{{!!codeTxt}}">{{codeTxt===''?'获取验证码':codeTxt}}</button>
    </view>
    <view class="button_box">
        <button bindtap="onConfirm" class="{{'button '+(code.length>=6?'':'disabled')}}" disabled="{{code.length<6}}" id="confirm_v_code">确认</button>
    </view>
</view>
