@-webkit-keyframes loading {
    0% {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }
}

@keyframes loading {
    0% {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }
}

.icon {
    width: 64rpx;
    height: 64rpx;
    padding-right: 20rpx;
}

.primary {
    color: #ff9600;
}

.success {
    color: #6dd400;
}

.danger {
    color: #d35656;
}

.text-main {
    color: #101010;
}

.text-gray {
    color: #a8a8a8;
}

.text-info {
    color: #5e5e5e;
}

.font-size-12 {
    font-size: 24rpx;
}

.mbm5 {
    margin-bottom: 10rpx;
}

.mbm10 {
    margin-bottom: 20rpx;
}

.mbm15 {
    margin-bottom: 30rpx;
}

.mbm20 {
    margin-bottom: 40rpx;
}

.nowrap {
    white-space: nowrap;
}

.loading-wrapper {
    text-align: center;
    padding: 60rpx 0;
}

.loading {
    width: 102rpx;
    height: 104rpx;
    animation: loading .6s linear infinite;
}

.clearfix::after {
    clear: both;
    display: block;
    visibility: hidden;
    height: 0;
    content: " ";
    font-size: 0;
}

.clearfix {
    zoom: 1;
}

.page_common_margin {
    margin-right: 20rpx;
    margin-left: 20rpx;
    border-radius: 16rpx;
}

.fixed_bottom {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
}

.add_required::before {
    content: '*';
    color: #f5222d;
    margin-right: 6rpx;
}

.add_un_required::before {
    content: '*';
    visibility: hidden;
    margin-right: 6rpx;
}

.button-none {
    background: 0 0;
    display: inline;
    color: inherit;
    padding: 0;
    margin: 0;
    line-height: initial;
    font-size: inherit;
}

.phone_tips_info {
    text-align: left;
    font-size: 30rpx;
    color: #4d4d4d;
    padding-top: 200rpx;
    padding-left: 50rpx;
    line-height: 100rpx;
}

.input_box {
    padding: 0 50rpx;
}

.input_box .get_code_button,.input_box .v_code_inout {
    height: 100rpx;
    border-radius: 8rpx;
    line-height: 100rpx;
    font-size: 30rpx;
}

.input_box .v_code_inout {
    float: left;
    width: 50%;
    background: #fff;
    text-align: left;
    padding-left: 20rpx;
    border: 0;
    box-shadow: none;
}

.input_box .get_code_button {
    float: right;
    width: 42%;
    background: #fabe39;
    text-align: center;
}

.button_box .button.disabled,.input_box .get_code_button.disabled {
    background: #e0e0e0;
    color: #999;
}

.button_box {
    height: 96rpx;
    padding: 0 46rpx;
    margin-top: 60rpx;
}

.button_box .button {
    display: block;
    height: 100%;
    border-radius: 48rpx;
    background: #fabe39;
    font-size: 32rpx;
    text-align: center;
    line-height: 96rpx;
    color: #000;
}