.popup-account-toggle {
    padding-bottom: 100rpx;
}

.popup-account-toggle__bg {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: rgba(0,0,0,.5);
    z-index: 9992;
}

.popup-account-toggle__content {
    height: 100%;
    display: flex;
    flex-direction: column;
    border-radius: 16rpx 16rpx 0 0;
    z-index: 9993;
    padding: 48rpx 26rpx 64rpx 32rpx;
}

.popup-account-toggle__content .title {
    font-size: 36rpx;
    font-weight: 700;
    color: #4d4d4d;
    margin-bottom: 44rpx;
    display: flex;
    justify-content: space-between;
}

.popup-account-toggle__content .title .iconfont {
    margin-left: 6rpx;
    font-weight: 100;
    color: #c5c6c7;
    font-size: 28rpx;
}

.popup-account-toggle__content .list .list__item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 30rpx;
}

.popup-account-toggle__content .list .list__item.active .list__right {
    color: #fabe39;
}

.popup-account-toggle__content .list .list__img {
    width: 74rpx;
    height: 74rpx;
    flex: 0 auto;
    margin-right: 24rpx;
}

.popup-account-toggle__content .list .list__img image,.popup-account-toggle__content .list .list__img img {
    display: block;
    border-radius: 8rpx;
    width: 100%;
    height: 100%;
    background: #efefef;
}

.popup-account-toggle__content .list .list__content {
    flex: 1;
    font-size: 26rpx;
    color: #4d4d4d;
    padding-bottom: 30rpx;
    position: relative;
}

.popup-account-toggle__content .list .list__content .balance {
    color: #999;
}

.popup-account-toggle__content .list .list__content .userinfo {
    margin-bottom: 10rpx;
}

.popup-account-toggle__content .list .list__content .userinfo .icon {
    width: 28rpx;
    height: 28rpx;
    vertical-align: text-top;
    margin-right: 6rpx;
}

.popup-account-toggle__content .list .list__content .company-name {
    color: #999;
    font-size: 24rpx;
}

.popup-account-toggle__content .list .list__content::after {
    content: '';
    position: absolute;
    left: 0;
    right: -54rpx;
    bottom: 0;
    border-bottom: 2rpx solid #eaeaea;
}

.popup-account-toggle__content .list .list__right {
    display: flex;
    align-items: center;
    padding-bottom: 26rpx;
    font-size: 22rpx;
    color: #d0d0d0;
}

.popup-account-toggle__content .list .list__right .text {
    color: #fabe39;
}

.popup-account-toggle__content .bottom-button {
    background: #fabe39;
    box-shadow: 0 8rpx 16rpx 0 rgba(250,190,57,.3);
    border-radius: 200rpx;
    line-height: 94rpx;
    height: 94rpx;
    text-align: center;
    margin: 38rpx 26rpx 0;
    font-size: 36rpx;
    color: #0d0d0d;
}

.popup-account-toggle__content .bottom-button:active {
    background: #f7d07c;
}

.popup-account-toggle__content .bottom-button--disabled {
    background: #ccc;
    color: #fff;
    box-shadow: 0 8rpx 16rpx 0 rgba(0,0,0,.1);
}

.popup-account-toggle__content .bottom-button--disabled:active {
    background: #ccc;
}

.fixed-bottom {
    background: #fff;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 9991;
    padding: 0 24rpx 40rpx;
}

.loading-container {
    padding-top: 240rpx;
    font-size: 28rpx;
    text-align: center;
}

.loading-container .load {
    background: url(https://qn-cdn-pic.feng1.com/theme_pic-20200814-81f40019199efe692ef1c52ec9117afc?imageslim) no-repeat;
    background-size: contain;
    width: 160rpx;
    height: 160rpx;
    margin: 0 auto 20rpx;
}