<block wx:if="{{$taroCompReady}}">
    <view class="loading-container" wx:if="{{list.length==0}}">
        <view class="load"></view>
        <view>加载中...</view>
    </view>
    <view class="{{modalClass}}" wx:else>
        <view class="popup-account-toggle__content">
            <view class="title">
                <view>请选择要登录的账户</view>
            </view>
            <view class="list">
                <block wx:if="{{list}}">
                    <view bindtap="toggleAccount" class="{{'list__item '+(activeIndex==index?'active':'')}}" data-e-tap-a-a="{{item[$original]}}" data-e-tap-a-b="{{index}}" data-e-tap-so="this" wx:for="{{loopArray17}}" wx:key="loginRandomCode">
                        <view class="list__img">
                            <image src="{{item[$original].headimgurl||IMG_ACCOUNT_DEFAULT}}"></image>
                        </view>
                        <view class="list__content" wx:if="{{item[$original].accountType==1}}">
                            <view class="userinfo">
                                <image class="icon" src="{{IMG_ACCOUNT_ICON1}}"></image>{{item[$original].userName}}
                                    <text class="balance" wx:if="{{item[$loopState__temp2]}}">(余额: ¥{{item[$original].balance}})</text>
                            </view>
                            <view class="mobile">{{item[$original].mobile}}</view>
                        </view>
                        <view class="list__content" wx:if="{{item[$original].accountType==2}}">
                            <view class="userinfo">
                                <image class="icon" src="{{IMG_ACCOUNT_ICON2}}"></image>{{item[$original].userName}} {{item[$original].mobile}}
                                    <text class="balance" wx:if="{{item[$loopState__temp4]}}">(余额: ¥{{item[$original].balance}})</text>
                            </view>
                            <view class="company-name">{{item[$original].groupName}}</view>
                        </view>
                        <view class="list__right">
                            <text class="iconfont icongouxuanweixuanzhong" wx:if="{{activeIndex!=index}}"></text>
                            <text class="iconfont icongouxuan" wx:if="{{activeIndex==index}}"></text>
                        </view>
                    </view>
                </block>
            </view>
            <view class="fixed-bottom">
                <view bindtap="onClickLogin" class="{{'bottom-button '+(activeIndex<0?'bottom-button--disabled':'')}}" data-e-tap-so="this">确认登录</view>
            </view>
        </view>
    </view>
</block>
