<block wx:if="{{$taroCompReady}}">
    <view wx:if="{{!$cart}}"></view>
    <view bindtap="closeCart" class="cart_opening_bg" data-e-tap-so="this" wx:else>
        <view bindtap="anonymousFunc0" class="cart_opening_box">
            <view class="cart_opening_header clearfix">
                <text class="header_left">已选商品</text>
                <text bindtap="clearCart" class="header_right" data-e-tap-so="this">
                    <text class="del_icon"></text>清空</text>
            </view>
            <view class="cart_opening_wrap">
                <view class="cart_opening_item has_bot_line clearfix" wx:for="{{loopArray35}}" wx:for-index="__index1" wx:for-item="cartProduct" wx:key="productId">
                    <view class="opening_item_name_box">
                        <text class="opening_item_name">{{cartProduct[$original].product.shortName}}</text>
                    </view>
                    <view class="opening_item_price">
                        <price compid="{{cartProduct[$compid__140]}}"></price>
                    </view>
                    <view class="item_btn_box has_quantity clearfix">
                        <stepper compid="{{cartProduct[$compid__141]}}"></stepper>
                    </view>
                </view>
            </view>
        </view>
    </view>
</block>
