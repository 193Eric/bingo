.task-card-container {
    margin-top: 20rpx;
    background-image: -webkit-gradient(linear,right top,left top,from(rgba(255,255,255,.04)),color-stop(19%,rgba(255,255,255,.46)),to(#fff));
    background-image: linear-gradient(270deg,rgba(255,255,255,.04) 0,rgba(255,255,255,.46) 19%,#fff 100%);
    border-radius: 200rpx 0 0 200rpx;
    width: 100%;
    height: 128rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.task-card-container .task-card__img {
    width: 132rpx;
    flex: 0 0 auto;
}

.task-card-container .task-card__img image,.task-card-container .task-card__img img {
    width: 124rpx;
    height: 108rpx;
}

.task-card-container .task-card__content {
    padding-left: 10rpx;
    flex: 1;
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #4d4d4d;
}

.task-card-container .task-card__content .orange {
    color: #ff9600;
}

.task-card-container .task-card__content__title {
    display: block;
    font-size: 38rpx;
    color: #333;
    font-weight: 700;
}

.task-card-container .task-card__right .btn {
    width: 204rpx;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
    color: #fff;
    background-image: -webkit-gradient(linear,left top,right top,from(#fabe39),to(#ff8c00));
    background-image: linear-gradient(90deg,#fabe39 0,#ff8c00 100%);
    box-shadow: 0 4rpx 12rpx 0 rgba(250,190,57,.5);
    border-radius: 38rpx;
    font-family: PingFangSC-Medium;
    font-size: 26rpx;
}

.task-card-container .task-card__right .btn:active {
    opacity: .7;
}

.task-card-container .task-card__right .btn-receive {
    margin-right: 16rpx;
    width: 154rpx;
    height: 68rpx;
}

.task-card-container2 {
    height: 160rpx;
    background: #fff;
    border-radius: 16rpx;
}

.task-card-container2 .task-card__img {
    margin-left: 10rpx;
    width: 100rpx;
}

.task-card-container2 .task-card__img image,.task-card-container2 .task-card__img img {
    width: 100rpx;
    height: 108rpx;
}