.load-more-tips {
    text-align: center;
    color: #999;
    font-size: 24rpx;
}

.load-more__indicator {
    display: flex;
    justify-content: center;
    align-items: center;
}

.load-more__indicator .at-loading {
    width: 32rpx;
    height: 32rpx;
    margin-right: 20rpx;
}

.load-more__indicator .at-loading .at-loading__ring {
    width: 32rpx;
    height: 32rpx;
    border-color: #fabe39 transparent transparent;
}

.load-more__indicator .content {
    align-self: center;
    margin-left: 8rpx;
    color: #999;
    font-size: 28rpx;
    line-height: 32rpx;
}