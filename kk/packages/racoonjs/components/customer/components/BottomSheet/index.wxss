.bottom-sheet-container {
    width: 100%;
    height: 100%;
    position: fixed;
    margin: auto;
    right: 0;
    top: 0;
    z-index: 987;
    visibility: hidden;
}

.bottom-sheet-container.bottom-sheet-open {
    visibility: visible;
}

.bottom-sheet-container.bottom-sheet-open .bottom-sheet-mask {
    opacity: 1;
}

.bottom-sheet-container.bottom-sheet-open .bottom-sheet-content {
    transform: translateY(0) translateZ(0);
}

.bottom-sheet-container .c-chart-popup__close {
    position: absolute;
    right: 32rpx;
    top: 32rpx;
    font-size: 24rpx;
    color: #4d4d4d;
}

.bottom-sheet-container .c-chart-popup__close .iconfont {
    font-size: 24rpx;
}

.bottom-sheet-content,.bottom-sheet-mask {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    transition: .3s ease;
}

.bottom-sheet-mask {
    height: 100%;
    margin: auto;
    right: 0;
    top: 0;
    background: rgba(0,0,0,.8);
    z-index: 988;
    opacity: 0;
    touch-action: none;
}

.bottom-sheet-content {
    z-index: 997;
    transform: translateY(100%) translateZ(0);
}