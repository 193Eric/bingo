.clearfix {
    clear: both;
}

.clearfix:after {
    content: '';
    display: block;
    clear: both;
}

.activity_bit_box {
    margin-top: 32rpx;
}

.activity_bit_box .item {
    box-shadow: 0 8rpx 16rpx rgba(0,0,0,.15);
    border-radius: 12rpx;
    overflow: hidden;
}

.activity_bit_box .type_1 .type_1_ul .li,.activity_bit_box .type_2>div,.activity_bit_box .type_2>view {
    width: 334rpx;
    height: 190rpx;
}

.activity_bit_box .type_1 .type_1_ul .li image,.activity_bit_box .type_1 .type_1_ul .li img,.activity_bit_box .type_2 .type_2_left .item image,.activity_bit_box .type_2 .type_2_left .item img,.activity_bit_box .type_2 .type_2_right .item img,.activity_bit_box .type_3 .type_3_ul .li image,.activity_bit_box .type_3 .type_3_ul .li img {
    display: block;
    width: 100%;
    height: 100%;
}

.activity_bit_box .type_1 .type_1_ul .li:nth-of-type(1) {
    float: left;
}

.activity_bit_box .type_1 .type_1_ul .li:nth-of-type(2) {
    float: right;
}

.activity_bit_box .type_3 .type_3_ul .li {
    width: 214rpx;
    height: 190rpx;
}

.activity_bit_box .type_3 .type_3_ul .li:nth-of-type(1) {
    float: left;
    margin-right: 26rpx;
}

.activity_bit_box .type_3 .type_3_ul .li:nth-of-type(2) {
    float: left;
}

.activity_bit_box .type_3 .type_3_ul .li:nth-of-type(3) {
    float: right;
}

.activity_bit_box .type_2 .type_2_left {
    float: left;
}

.activity_bit_box .type_2 .type_2_left .item {
    width: 100%;
    height: 100%;
}

.activity_bit_box .type_2 .type_2_right {
    float: right;
}

.activity_bit_box .type_2 .type_2_right .item {
    width: 100%;
    height: 88rpx;
}

.activity_bit_box .type_2 .type_2_right .item:nth-of-type(1) {
    margin-bottom: 12rpx;
}