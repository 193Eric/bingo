@-webkit-keyframes horizontal-animation {
    0% {
        transform: translate3d(0,0,0);
    }

    to {
        transform: translate3d(-50%,0,0);
    }
}

@keyframes horizontal-animation {
    0% {
        transform: translate3d(0,0,0);
    }

    to {
        transform: translate3d(-50%,0,0);
    }
}

@-webkit-keyframes kf-marque-animation {
    0% {
        transform: translateX(0);
    }

    to {
        transform: translateX(-33.3%);
    }
}

@keyframes kf-marque-animation {
    0% {
        transform: translateX(0);
    }

    to {
        transform: translateX(-33.3%);
    }
}

.broadcast_box {
    margin-top: 20rpx;
    background: #fff;
    border-radius: 8rpx;
    height: 68rpx;
}

.broadcast_box .broadcast_icon {
    float: left;
    height: 100%;
    width: 80rpx;
    background: url(data:image/png;base64,) no-repeat center;
    background-size: 40rpx 32rpx;
}

.broadcast_box .next_broadcast_btn {
    float: right;
    height: 100%;
    width: 56rpx;
    background: url(data:image/png;base64,) no-repeat center;
    background-size: 10rpx 16rpx;
}

.broadcast_box .broadcast_ul_wrap {
    height: 80rpx;
    position: relative;
    overflow-y: hidden;
    margin: 0 56rpx 0 80rpx;
}

.broadcast_box .broadcast_ul_wrap ::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.broadcast_box .broadcast_ul_wrap .broadcast_ul {
    position: absolute;
    width: 100%;
    left: 0;
    top: 0;
}

.broadcast_box .broadcast_ul_wrap .broadcast_ul.has_transition {
    transition: all .5s linear;
}

.broadcast_box .broadcast_ul_wrap .broadcast_ul .broadcast_item {
    height: 68rpx;
    line-height: 68rpx;
    white-space: nowrap;
    color: #333;
    font-size: 26rpx;
    position: relative;
    font-weight: 400;
}

.broadcast_box .broadcast_ul_wrap .broadcast_ul .broadcast_item.is-school-shelf {
    font-family: PingFang-SC-Medium;
    font-size: 32rpx;
}

.broadcast_box .broadcast_ul_wrap .broadcast_ul .broadcast_item.align_right span {
    right: 0;
    left: auto;
}

.broadcast_box .broadcast_ul_wrap .broadcast_ul .broadcast_item span {
    transition: all 1s linear;
    position: absolute;
    left: 0;
    right: 0;
}

.body-theme-white .broadcast_box {
    background: #e20e34;
}

.body-theme-white .broadcast_box .broadcast_ul_wrap .broadcast_ul .broadcast_item {
    color: #fff;
}

.body-theme-white .broadcast_icon {
    background: url(data:image/png;base64,) no-repeat center;
    background-size: 40rpx 32rpx;
}

.body-theme-white .next_broadcast_btn {
    background: url(data:image/png;base64,) no-repeat center;
    background-size: 10rpx 16rpx;
}

.broadcast_item_btn {
    display: inline-block;
}

.broadcast_item_btn.horizontal-animation {
    animation: horizontal-animation 9s 2s linear infinite;
}

.broadcast_item_btn_next {
    position: inherit!important;
    margin-left: 100rpx;
    margin-right: 100rpx;
}