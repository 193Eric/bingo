<template name="renderBroadcastsItem">
    <view wx:if="{{!list||list.length==0}}"></view>
    <view class="{{'broadcast_ul '+(hasTransition?'has_transition':'')+' '+(isSchoolShelf?'is-school-shelf':'')}}" style="{{anonymousState__temp}}" wx:else>
        <view bindtap="onItemClick" class="broadcast_item" data-e-tap-a-a="{{item}}" data-e-tap-so="this" wx:for="{{newList}}" wx:key="index">
            <view class="{{'broadcast_item_btn '+(isOnlyOne?'horizontal-animation':'')}}">{{item.contentDetail&&item.contentDetail.detailValue}}
                    <text class="broadcast_item_btn_next" wx:if="{{isOnlyOne}}">{{item.contentDetail&&item.contentDetail.detailValue}}</text>
            </view>
        </view>
    </view>
</template>
<block wx:if="{{$taroCompReady}}">
    <view wx:if="{{!list||list.length==0}}"></view>
    <view catchtouchmove="handleTouchMove" class="broadcast_container" wx:else>
        <view class="broadcast_box clearfix">
            <view class="broadcast_icon"></view>
            <view class="next_broadcast_btn"></view>
            <view class="broadcast_ul_wrap">
                <template is="renderBroadcastsItem" data="{{...anonymousState__temp2}}"></template>
            </view>
        </view>
    </view>
</block>
