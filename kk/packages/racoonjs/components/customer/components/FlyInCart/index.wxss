.fly_outer {
    position: fixed;
    z-index: 20000;
    width: 0;
    height: 0;
    transition: all .3s linear 0s;
    display: none;
}

.fly_outer .fly_inner {
    position: absolute;
    z-index: 20000;
    top: 0;
    left: 0;
    width: 30rpx;
    height: 30rpx;
    margin-top: -15rpx;
    margin-left: -15rpx;
    border-radius: 50%;
    background: red;
    transition: all .3s cubic-bezier(.39,-.4,.83,.23) 0s;
}