.count-down-time {
    display: inline-block;
    vertical-align: middle;
}

.time-container {
    display: flex;
    color: #8d001a;
    align-items: center;
}

.time-container .time-padding {
    margin: 0 4rpx;
}

.time-container .time-box {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40rpx;
    height: 40rpx;
    background: #8d001a;
    border-radius: 8rpx;
    color: #fff;
    font-size: 24rpx;
    box-sizing: border-box;
}

.time-container.black {
    color: #333;
}

.time-container.black .time-box {
    background: #333;
    border-radius: 4rpx;
}

.time-container .day {
    font-family: PingFang-SC-Medium;
    color: #333;
    font-size: 24rpx;
    margin-right: 4rpx;
}