.product_spike_progress {
    display: flex;
    align-items: center;
    flex-wrap: nowrap;
    overflow: hidden;
}

.product_spike_progress__value {
    width: 52rpx;
    flex-shrink: 0;
}

.product_spike_progress>.span,.product_spike_progress>span {
    font-weight: 700;
    font-size: 20rpx;
    color: #ff9600;
    white-space: nowrap;
    flex: 0 auto;
}

.product_spike_progress__bar {
    width: 166rpx;
    height: 16rpx;
    margin-left: 12rpx;
    margin-right: 18rpx;
    background: #eee;
    border-radius: 10rpx;
    flex: 0 auto;
    flex-shrink: 0;
}

.product_spike_progress__bar>.span,.product_spike_progress__bar>span {
    display: block;
    width: 2rpx;
    min-width: 10rpx;
    max-width: 150rpx;
    height: 100%;
    background-image: -webkit-gradient(linear,left top,right top,color-stop(1%,#ffd041),color-stop(50%,#ff8c00),to(#ff8c00));
    background-image: linear-gradient(90deg,#ffd041 1%,#ff8c00 50%,#ff8c00 100%);
    border-radius: 10rpx;
    position: relative;
}

.product_spike_progress__bar>.span:before,.product_spike_progress__bar>span:before {
    content: '';
    display: block;
    position: absolute;
    right: -8rpx;
    top: -2rpx;
    z-index: 3;
    width: 32rpx;
    height: 34rpx;
    background: url(data:image/gif;base64,) no-repeat;
    background-size: contain;
}

.product_spike_progress__bar>.span:after,.product_spike_progress__bar>span:after {
    content: '';
    display: block;
    position: absolute;
    right: -14rpx;
    top: -.02rem;
    width: 40rpx;
    height: 24rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}