.preferential_information {
    height: 32rpx;
    margin-bottom: 16rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 22rpx;
    display: flex;
}

.preferential_information .exchange_w,.preferential_information .full_piece_w {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 22rpx;
    padding: 4rpx 8rpx;
    overflow: visible;
    border-radius: 10rpx;
    margin-right: 20rpx;
    font-family: PingFangSC-Medium;
    color: #ff8e00;
}

.preferential_information .exchange_w:before,.preferential_information .full_piece_w:before {
    content: "";
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%) scale(.5,.5);
    width: 200%;
    height: 200%;
    border-radius: 10rpx;
    border: 2rpx solid #ffcc83;
}

.preferential_information .low-stock-flag {
    font-family: PingFang-SC-Medium;
}

.preferential_information .discount_value {
    color: #fe6722;
    padding-left: 30rpx;
    background: url(data:image/png;base64,) no-repeat left center;
    background-size: 30rpx 30rpx;
    font-family: PingFang-SC-Regular;
    font-size: 24rpx;
    display: inline-block;
    margin-right: 8rpx;
    line-height: 30rpx;
    border: 2rpx solid transparent;
}