<template name="renderProductCateActivityFlag">
    <view wx:if="{{!product||onlyLowStockFlag}}"></view>
    <view wx:elif="{{!activity}}"></view>
    <view wx:elif="{{activity&&!activity.isInActivityPeriod}}"></view>
    <view class="full_piece_w" wx:if="{{content}}">{{content}}</view>
</template>
<template name="renderLowStockFlag">
    <view wx:if="{{!product||!product.isLowStock}}"></view>
    <view class="{{classname+' low-stock-flag'}}" wx:else>仅剩{{product.stockQuantity}}件</view>
</template>
<template name="renderContent">
    <view wx:if="{{!product||onlyLowStockFlag}}"></view>
    <view wx:elif="{{activity&&!activity.isInActivityPeriod}}"></view>
    <view class="exchange_w" wx:elif="{{exchangeData&&exchangeData.fullPrice}}">每满{{exchangeData.fullPrice}}元加{{exchangeData.discountValue}}元即可超值换购</view>
    <block wx:elif="{{activity&&activity.fullPieceList&&activity.skuType==1}}">
        <view class="full_piece_w" wx:for="{{activity.fullPieceList}}" wx:for-index="_anonIdx2" wx:key="activityItemId">{{item.activityItemName}}</view>
    </block>
    <view class="discount_value" wx:elif="{{activity&&activity.discountType==1&&activity.skuType==1&&activity.activityType===1}}">{{activity.discountValue}}折</view>
    <view wx:else></view>
</template>
<view class="preferential_information" wx:if="{{$taroCompReady}}">
    <template is="renderProductCateActivityFlag" data="{{...anonymousState__temp}}" wx:if="{{isInProductCate}}"></template>
    <template is="renderContent" data="{{...anonymousState__temp2}}" wx:else></template>
    <template is="renderLowStockFlag" data="{{...anonymousState__temp3}}"></template>
</view>
