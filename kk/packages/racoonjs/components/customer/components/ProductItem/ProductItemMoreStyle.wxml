<template name="renderLabel">
    <view wx:if="{{!product}}"></view>
    <toggle compid="{{$compid__202}}" wx:else>
        <text class="gather_label">{{label}}</text>
    </toggle>
</template>
<block wx:if="{{$taroCompReady}}">
    <view wx:if="{{!product}}"></view>
    <view class="c-product c-product--min" wx:else>
        <template is="renderLabel" data="{{...anonymousState__temp}}"></template>
        <view class="img_box">
            <image class="c-product__img" src="{{product.imagePath}}"></image>
            <toggle compid="{{$compid__203}}">
                <view class="type_label_cart type_label_0"></view>
            </toggle>
        </view>
        <view class="c-product__des">
            <view class="c-product__title">{{product.shortName}}</view>
            <view class="c-product-price">
                <price compid="{{$compid__204}}"></price>
            </view>
            <view class="c-product-actions item_btn_box">
                <stepper compid="{{$compid__205}}"></stepper>
            </view>
        </view>
        <view bindtap="onAddProduct" class="click_hot_spot" data-e-tap-so="this"></view>
    </view>
</block>
