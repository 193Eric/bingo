.bottom-popup-product {
    display: flex;
    align-items: center;
    position: relative;
    padding: 28rpx 32rpx;
}

.bottom-popup-product:after {
    position: absolute;
    content: "";
    border-bottom: 2rpx dashed #e0e0e0;
    width: calc(100% - 140rpx);
    bottom: 0;
    left: 170rpx;
}

.bottom-popup-product__image {
    width: 110rpx;
    height: 110rpx;
    margin-right: 28rpx;
}

.bottom-popup-product__meta {
    font-size: 24rpx;
    color: #4d4d4d;
    letter-spacing: 0.26rpx;
    line-height: 24rpx;
    flex: 1;
    position: relative;
    height: 110rpx;
}

.bottom-popup-product__meta .react-price {
    font-size: 30rpx;
    color: #ff9600!important;
    letter-spacing: 0.32rpx;
    text-align: right;
    line-height: 30rpx;
}

.bottom-popup-product__meta .react-price .react-price__unit,.bottom-popup-product__meta .react-price .react-price__value {
    color: #ff9600;
}

.bottom-popup-product__name {
    font-size: 28rpx;
    color: #4d4d4d;
    letter-spacing: 0.3rpx;
    line-height: 40rpx;
    position: absolute;
    top: 0;
}

.bottom-popup-product__action button {
    font-family: PingFangSC-Medium;
    background-image: -webkit-gradient(linear,right top,left top,from(#fabe39),to(#ff9600));
    background-image: linear-gradient(-90deg,#fabe39 0,#ff9600 100%);
    border-radius: 200rpx;
    font-size: 24rpx;
    color: #fff;
    letter-spacing: 0.02rpx;
    text-align: center;
    line-height: 48rpx;
    height: 48rpx;
    width: 124rpx;
    white-space: nowrap;
}

.bottom-popup-product .right_bot {
    position: absolute;
    bottom: 0;
}

.bottom-popup-product .right_bot text {
    font-size: 30rpx;
    color: #ff9600;
}