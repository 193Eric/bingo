<template name="renderProductActLabel">
    <view wx:if="{{!product}}"></view>
    <view class="type_label_icon type_label_collectCard" style="{{_$anonymousState__temp6}}" wx:elif="{{findConfig&&product}}"></view>
    <view class="{{'type_label_icon type_label_'+activity.businessType+' '+(_$customStyle?'type_label_custom':'')}}" style="{{_$anonymousState__temp7}}" wx:elif="{{product&&activity&&activity.businessType&&activity.businessType!=7}}"></view>
    <view class="type_label_icon type_label_0" wx:elif="{{product&&product.isNewProduct}}"></view>
    <view wx:else></view>
</template>
<template name="renderRestrictionsNum">
    <view class="restrictions_info_label" wx:if="{{product&&product.homeRestrictionsNumber&&product.homeRestrictionsNumber>0}}">限{{product.homeRestrictionsNumber}}件</view>
</template>
<template name="renderPrice">
    <view wx:if="{{!product}}"></view>
    <view class="price_information clearfix" wx:else>
        <view class="current_price_box">
            <price compid="{{$compid__115}}"></price>
        </view>
        <view class="origin_price_box" wx:if="{{discountPrice!==salePrice}}">
            <price compid="{{$compid__116}}"></price>
        </view>
    </view>
</template>
<template name="renderCombinationProductItem">
    <view wx:if="{{!$cart}}"></view>
    <view class="content_item combination_box_content_item" wx:else>
        <view class="discount-price" wx:if="{{reducePrice}}">省{{reducePrice}}<text>元</text>
        </view>
        <view class="item_top">
            <view class="top_img_box">
                <image class="img_1" lazyLoad="{{true}}" src="{{product2.imagePath}}" wx:if="{{product2}}"></image>
                <image class="img_0" lazyLoad="{{true}}" src="{{product1.imagePath}}" wx:if="{{product1}}"></image>
            </view>
        </view>
        <view class="item_center">{{product.shortName}}</view>
        <view class="item_bot">
            <view class="combination_current_price">
                <price compid="{{$compid__112}}"></price>
                <view class="combination_origin_price">
                    <price compid="{{$compid__113}}"></price>
                </view>
                <stepper compid="{{$compid__114}}"></stepper>
            </view>
        </view>
    </view>
</template>
<template name="renderLayout25">
    <view class="once_purchased_item">
        <view class="item_top">
            <view class="top_img_box">
                <image lazyLoad="{{true}}" src="{{product.imagePath}}"></image>
            </view>
            <view class="item_center">{{product.shortName}}</view>
            <toggle compid="{{$compid__109}}">
                <product-preferential compid="{{$compid__110}}"></product-preferential>
            </toggle>
            <template is="renderPrice" data="{{...anonymousState__temp4}}"></template>
            <view class="item_btn_box">
                <stepper compid="{{$compid__111}}"></stepper>
            </view>
        </view>
    </view>
</template>
<template name="renderRightContent">
    <view class="item_right" wx:if="{{product}}">
        <view class="right_content">
            <view class="product_name">
                <template is="renderRestrictionsNum" data="{{..._$_$anonymousState__temp2}}"></template>
                <text>{{product.shortName}}</text>
            </view>
            <product-describe compid="{{$compid__106}}"></product-describe>
            <product-preferential compid="{{$compid__107}}"></product-preferential>
            <template is="renderPrice" data="{{..._$_$anonymousState__temp3}}"></template>
            <stepper compid="{{$compid__108}}"></stepper>
        </view>
    </view>
</template>
<template name="renderLeftContent">
    <view class="item_left" wx:if="{{product}}">
        <view class="item_img_box">
            <image lazyLoad="{{true}}" src="{{product.imagePath}}"></image>
            <template is="renderProductActLabel" data="{{..._$_$anonymousState__temp}}"></template>
        </view>
    </view>
</template>
<block wx:if="{{$taroCompReady}}">
    <template is="renderLayout25" data="{{..._$_$anonymousState__temp4}}" wx:if="{{layout&&layout==='2.5'}}"></template>
    <view class="product_content_item--combination" wx:elif="{{typeKey=='combination'}}">
        <template is="renderCombinationProductItem" data="{{..._$_$anonymousState__temp5}}"></template>
    </view>
    <view class="product_content_item clearfix" wx:else>
        <template is="renderLeftContent" data="{{...anonymousState__temp8}}"></template>
        <template is="renderRightContent" data="{{...anonymousState__temp9}}"></template>
    </view>
</block>
