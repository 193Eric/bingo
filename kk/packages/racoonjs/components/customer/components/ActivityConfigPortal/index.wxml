<template name="renderStyleGroup">
    <view bindtap="openActivityPage" class="activity-section-group" data-e-tap-so="this">
        <view class="activity-group-container clearfix">
            <view class="des-container">
                <view class="p title">
                    <text class="span des1">{{customerActGroupData.headerTitle}}</text>
                    <text class="span task">{{customerActGroupData.headerTitleRemark}}</text>
                </view>
                <view class="des-btn">
                    <text class="span des2">{{customerActGroupData.headerDetail}}</text>
                    <view class="button go-btn">GO</view>
                </view>
            </view>
            <view class="img-container">
                <image src="{{IMG_GROUP}}"></image>
            </view>
        </view>
    </view>
</template>
<template name="renderStyleContent">
    <view wx:if="{{taskData.shortAim===undefined}}"></view>
    <view bindtap="jumpActivityUrl" class="anniversary-progress-new" data-e-tap-so="this" wx:else>
        <view class="{{'anniversary-progress-inner theme2 '+(orderDiffValue==0?'activity-complete':'')}}">
            <view class="gift-icon finish"></view>
            <view class="gift-line"></view>
            <view class="ann-content">
                <template is="renderContent" data="{{...anonymousState__temp2}}"></template>
                <text class="arrow-flash">
                    <text class="i iconfont iconshopping-cat_icon_go"></text>
                    <text class="i iconfont iconshopping-cat_icon_go"></text>
                </text>
            </view>
        </view>
    </view>
</template>
<template name="renderStyle2Content">
    <view wx:if="{{taskData.shortAim===undefined}}"></view>
    <view class="anniversary-progress-new" wx:else>
        <view class="{{'anniversary-progress-inner theme1 '+(orderDiffValue==0?'activity-complete':'')}}">
            <view class="gift-icon finish"></view>
            <view class="gift-line"></view>
            <view class="ann-content">
                <template is="renderContent" data="{{...anonymousState__temp}}"></template>
            </view>
            <view bindtap="jumpActivityUrl" class="lottery-btn" data-e-tap-so="this">
                <image alt="" class="img" src="{{GIF_LOTTERY_BTN}}" wx:if="{{isCompleteTask}}"></image>
                <view class="btn" wx:if="{{!isCompleteTask}}">查看详情</view>
            </view>
        </view>
    </view>
</template>
<template name="renderContent">
    <view wx:if="{{taskData.shortAim===undefined}}"></view>
    <text class="small-padding" wx:elif="{{isInit}}">{{activityData.initRemark}}</text>
    <block wx:elif="{{orderDiffValue!=0||isStart}}">
        <block wx:if="{{orderDiffValue!=0||isStart}}" wx:for="{{loopArray47}}" wx:for-index="_anonIdx2" wx:for-item="span">
            <text class="num" wx:if="{{span[$original].type==='number'}}">{{span[$original].content}}</text>
            <text wx:else>{{span[$original]}}</text>
        </block>
    </block>
    <text wx:elif="{{isFinish}}">{{activityData.fullRemark}}</text>
    <text wx:elif="{{taskCycle==1}}">{{displayStyle==1?'客官，明日再来哦~':'今天抽奖次数已用完，明天再来吧~'}}</text>
    <text wx:elif="{{taskCycle==2}}">{{displayStyle==1?'客官，下周再来哦~':'本周抽奖次数已用完，下周再来吧~'}}</text>
    <text wx:elif="{{lotteryUseType==4}}">activityData.initRemark</text>
    <view wx:else></view>
</template>
<block wx:if="{{$taroCompReady}}">
    <view wx:if="{{!isShow||!isTaskCycleStatus}}"></view>
    <template is="renderStyleGroup" data="{{..._$_$anonymousState__temp}}" wx:elif="{{customerACTLottery&&customerACTLottery.groupCode}}"></template>
    <template is="renderStyle2Content" data="{{..._$_$anonymousState__temp2}}" wx:elif="{{displayStyle==2}}"></template>
    <template is="renderStyleContent" data="{{...anonymousState__temp5}}" wx:else></template>
</block>
