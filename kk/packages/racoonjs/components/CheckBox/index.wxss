.c-checkbox {
    line-height: 36rpx;
    height: 36rpx;
    margin-right: 12rpx;
}

.c-checkbox .o-icon,.c-checkbox__text {
    vertical-align: middle;
    line-height: 36rpx;
}

.c-checkbox .o-icon {
    display: inline-block;
    width: 36rpx;
    height: 36rpx;
    border-radius: 18rpx;
    border: 2rpx solid #e4e4e4;
    box-sizing: border-box;
}

.c-checkbox__text {
    font-size: 28rpx;
    margin-left: 16rpx;
}

.c-checkbox--active .o-icon {
    border: 0;
    background: url(data:image/png;base64,) no-repeat 50%;
    background-size: 100% 100%;
}

.c-checkbox--disabled .o-icon {
    background-color: #eee;
}