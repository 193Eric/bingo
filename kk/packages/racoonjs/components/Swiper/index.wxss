.swiper-container {
    overflow-y: hidden;
    box-sizing: border-box;
}

.swiper-container .swiper-container-wrapper {
    height: 100%;
}

.swiper-container image,.swiper-container img {
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
    display: block;
}

.swiper-container-wrapper .wx-swiper-dots.wx-swiper-dots-horizontal {
    margin-bottom: 2rpx;
}

.swiper-container-wrapper .wx-swiper-dot {
    width: 40rpx;
    display: inline-flex;
    height: 10rpx;
    margin-left: 20rpx;
    justify-content: space-between;
}

.swiper-container-wrapper .wx-swiper-dot::before {
    content: '';
    flex-grow: 1;
    background: rgba(255,255,255,.8);
    border-radius: 8rpx;
}

.swiper-container-wrapper .wx-swiper-dot-active::before {
    background: rgba(244,0,0,.8);
}