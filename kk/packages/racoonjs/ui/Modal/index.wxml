<view catchtouchmove="handleTouchMove" class="{{modalClass}}" wx:if="{{$taroCompReady}}">
    <view bindtap="handleClickOverlay" catchtouchmove="maskTouchMove" class="c-mask"></view>
    <view class="c-modal-content" style="{{anonymousState__temp}}">
        <view class="c-modal__body">
            <slot></slot>
        </view>
        <view class="c-modal__footer" wx:if="{{isShowClose}}">
            <view bindtap="close" class="o-icon-cancel"></view>
        </view>
    </view>
</view>
