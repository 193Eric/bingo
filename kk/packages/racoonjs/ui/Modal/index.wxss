@-webkit-keyframes modalShow {
    0% {
        transform: translate(-50%,-50%) scale(0);
        opacity: 0;
    }

    to {
        transform: translate(-50%,-50%) scale(1);
        opacity: 1;
    }
}

@keyframes modalShow {
    0% {
        transform: translate(-50%,-50%) scale(0);
        opacity: 0;
    }

    to {
        transform: translate(-50%,-50%) scale(1);
        opacity: 1;
    }
}

@-webkit-keyframes modalBgFade {
    0% {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

@keyframes modalBgFade {
    0% {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

.fe-modal,.fe-modal .c-mask {
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    transition: all .3s;
}

.fe-modal {
    position: fixed;
    z-index: 1000;
    visibility: hidden;
}

.fe-modal .c-mask {
    position: absolute;
    z-index: 1001;
    background: rgba(0,0,0,.6);
    opacity: 0;
}

.fe-modal.fe-modal-open {
    visibility: visible;
}

.fe-modal.fe-modal-open .c-mask {
    opacity: 1;
}

.fe-modal.fe-modal-open .c-modal-content {
    opacity: 1;
    transform: translate(-50%,-50%) scale(1);
}

.fe-modal .c-modal-content {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%) scale(0);
    opacity: 0;
    z-index: 1002;
    transition: .3s ease;
}

.fe-modal .c-modal-body {
    transform: scale(.25);
    width: 600rpx;
    background-color: #fff;
    border-radius: 10rpx;
    opacity: 0;
    transition: all .3s;
}

.fe-modal .c-modal__footer {
    padding: 30rpx 0;
    text-align: center;
    background-color: transparent;
}

.fe-modal .c-modal__footer .o-icon-cancel {
    width: 64rpx;
    height: 64rpx;
    font-size: 64rpx;
    opacity: .8;
    color: #fff;
    background: url(data:image/png;base64,) no-repeat center;
    background-size: 100% 100%;
    margin: 0 auto;
}

.yuanqi-theme .btn-primary {
    background: #97d700;
